<Window x:Class="CustomerSimulationUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerSimulationUI"
        mc:Ignorable="d"
        SizeToContent="Height"
        Title="MainWindow" Height="auto" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Name="ButtonUpload" Content="Upload File" Margin="5" Click="ButtonUpload_Click"/>
        <Button Grid.Row="0" Grid.Column="1" Name="ButtionSimulation" Content="Create Simulation" Margin="5" Click="ButtionSimulation_Click"/>
    </Grid>
</Window>
